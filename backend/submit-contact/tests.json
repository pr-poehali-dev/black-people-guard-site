{
  "tests": [
    {
      "name": "Handle OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Submit valid contact form",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 999 123 45 67",
        "email": "test@example.com",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty name",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "",
        "phone": "+7 999 123 45 67",
        "email": "test@example.com"
      },
      "expectedStatus": 400
    }
  ]
}
